	  <when>
	    <test>
	      <not>
		<or>
		  <equal>
		    <clip pos="1" part="temps"/>
		    <lit-tag v="inf"/>
		  </equal> 
		  <equal>
		    <clip pos="1" part="temps"/>
		    <lit-tag v="ger"/>
		  </equal>
		</or>
	      </not>
	    </test>
	    <choose>
	      <when>
		<test>
		  <equal>
		    <clip pos="1" part="a_pers"/>
		    <lit-tag v="PD"/>
		  </equal>
		</test>
		<let>
		  <clip pos="1" part="a_pers"/>
		  <lit-tag v="p3"/>
		</let>
	      </when>
	    </choose>
	    <choose>
	      <when>
		<test>
		  <equal>
		    <clip pos="1" part="nbr"/>
		    <lit-tag v="ND"/>
