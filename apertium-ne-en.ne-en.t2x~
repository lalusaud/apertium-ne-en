		</chunk>
		<b/>
		<chunk>
			<clip pos="4" part="whole"/>
		</chunk>
		<b/>
		<chunk>
			<clip pos="1" part="whole"/>
		</chunk>
		<b/>
		<chunk>
			<clip pos="2" part="whole"/>
		</chunk>
	</out>
	
	</action>
    </rule>

  </section-rules>
