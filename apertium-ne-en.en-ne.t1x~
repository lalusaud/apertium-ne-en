            </tags>
            <lu>
              <clip pos="3" side="tl" part="whole"/>
            </lu>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>





    <rule comment="REGLA: in NOM's direction  - NOM tira ko">
      <pattern>
        <pattern-item n="in"/>
